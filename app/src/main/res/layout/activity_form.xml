<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_uid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/eighty"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/fifteen"
            android:hint="@string/enter_uid"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textCursorDrawable="@drawable/blue_cursor"
            app:met_baseColor="@color/colorPrimary"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextColor="@color/colorPrimary"
            app:met_helperTextColor="@color/validation_red"
            app:met_primaryColor="@color/colorPrimary"
            app:met_underlineColor="@color/colorPrimary" />


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_app_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/eighty"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/thirty"
            android:hint="@string/enter_api_id"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textCursorDrawable="@drawable/blue_cursor"
            app:met_baseColor="@color/colorPrimary"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextColor="@color/colorPrimary"
            app:met_helperTextColor="@color/validation_red"
            app:met_primaryColor="@color/colorPrimary"
            app:met_underlineColor="@color/colorPrimary" />

        <Button
            android:id="@+id/btn_get_offers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/thirty"
            android:background="@drawable/get_offers"
            android:text="@string/get_offers"
            android:textColor="@android:color/white" />
    </LinearLayout>
</RelativeLayout>